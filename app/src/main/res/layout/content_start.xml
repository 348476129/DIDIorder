<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_start"
    tools:context="com.example.didiorder.StartActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/start_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        fresco:placeholderImage="@mipmap/start_image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/start_name"
        android:layout_width="108dp"
        android:layout_height="50dp"
        fresco:placeholderImage="@mipmap/start_name"
        android:layout_below="@+id/start_image"
        android:layout_centerHorizontal="true" />
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/login_button"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:text="登录"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />
</RelativeLayout>
